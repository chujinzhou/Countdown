<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme">@style/Theme.Holo.BlueActionBar</style>
    
    <style name="Theme.Holo.Mine" parent="android:style/Theme.Holo.Light">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:actionBarStyle">@style/TranspartActionBarStyle</item>
    </style>
    
    <style name="Theme.Holo.BlueActionBar" parent="android:style/Theme.Holo.Light">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:actionBarStyle">@style/BlueActionBarStyle</item>
    </style>
    
    <style name="BlueActionBarStyle" parent="android:style/Widget.ActionBar">  
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:titleTextStyle">@style/WhiteText_ActionBar</item>
    </style>
    
    <style name="TranspartActionBarStyle" parent="android:style/Widget.ActionBar">  
        <item name="android:background">#00000000</item>
        <item name="android:titleTextStyle">@style/WhiteText_ActionBar</item>
    </style>
    
    <style name="WhiteText_ActionBar" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
</resources>
